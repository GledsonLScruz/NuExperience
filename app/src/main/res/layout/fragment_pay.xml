<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PayFragment"
    android:background="@color/gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pagarcompix"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:padding="5dp">

        <ImageView
            android:id="@+id/close"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/secondary"/>

        <ImageView
            android:id="@+id/pixpagarpng"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/pixx"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/close"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="90dp"
            app:tint="@color/secondary"/>/>

        <TextView
            android:id="@+id/titlepagarpix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginBottom="40dp"

            android:fontFamily="sans-serif-black"

            android:text="@string/pagarcompix"
            android:textColor="@color/black"

            android:textSize="18sp"

            app:layout_constraintBottom_toBottomOf="@id/pixpagarpng"

            app:layout_constraintStart_toEndOf="@id/pixpagarpng"
            app:layout_constraintTop_toTopOf="@id/pixpagarpng" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"

            android:text="@string/descpagarcompix"


            android:textColor="@color/realgray"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/pixpagarpng"
            app:layout_constraintStart_toEndOf="@id/pixpagarpng"
            app:layout_constraintTop_toTopOf="@id/pixpagarpng"
            tools:layout_editor_absoluteX="20dp" />

        <ImageView

            android:id="@+id/seta"
            android:layout_width="18dp"


            android:layout_height="18dp"

            android:layout_marginTop="7dp"
            android:layout_marginEnd="10dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/pixpagarpng" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pagarfaturacartao"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@id/pagarcompix"
        android:layout_marginTop="4dp"

        android:background="@color/white"
        android:padding="5dp">


        <ImageView
            android:id="@+id/faturapagarpng"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="90dp"

            android:src="@drawable/ic_baseline_credit_card_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/secondary" />/>

        <TextView
            android:id="@+id/titlefaturapagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginBottom="40dp"

            android:fontFamily="sans-serif-black"

            android:text="@string/pagarfaturadocartao"
            android:textColor="@color/black"

            android:textSize="18sp"

            app:layout_constraintBottom_toBottomOf="@id/faturapagarpng"

            app:layout_constraintStart_toEndOf="@id/faturapagarpng"
            app:layout_constraintTop_toTopOf="@id/faturapagarpng" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"

            android:text="@string/descpagarfatura"


            android:textColor="@color/realgray"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/faturapagarpng"
            app:layout_constraintStart_toEndOf="@id/faturapagarpng"
            app:layout_constraintTop_toTopOf="@id/faturapagarpng"
            tools:layout_editor_absoluteX="20dp" />

        <ImageView

            android:id="@+id/setaa"
            android:layout_width="18dp"


            android:layout_height="18dp"

            android:layout_marginTop="7dp"
            android:layout_marginEnd="10dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/faturapagarpng" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pagarumboleto"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@id/pagarfaturacartao"
        android:layout_marginTop="4dp"

        android:background="@color/white"
        android:padding="5dp">


        <ImageView
            android:id="@+id/pagarumboletopng"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="90dp"

            android:src="@drawable/pagar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/secondary"/>/>

        <TextView
            android:id="@+id/titlepagarumboleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginBottom="40dp"

            android:fontFamily="sans-serif-black"

            android:text="@string/pagarumboleto"
            android:textColor="@color/black"

            android:textSize="18sp"

            app:layout_constraintBottom_toBottomOf="@id/pagarumboletopng"

            app:layout_constraintStart_toEndOf="@id/pagarumboletopng"
            app:layout_constraintTop_toTopOf="@id/pagarumboletopng" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"

            android:text="@string/descpagarumboleto"


            android:textColor="@color/realgray"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/pagarumboletopng"
            app:layout_constraintStart_toEndOf="@id/pagarumboletopng"
            app:layout_constraintTop_toTopOf="@id/pagarumboletopng"
            tools:layout_editor_absoluteX="20dp" />

        <ImageView

            android:id="@+id/setaaa"
            android:layout_width="18dp"


            android:layout_height="18dp"

            android:layout_marginTop="7dp"
            android:layout_marginEnd="10dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/pagarumboletopng" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>